@using DrinksGo.Data.ViewModels
@model DrinkListViewModel

<div>
    <h2>All drinks are shown here</h2>
    @* <h2>@ViewBag.Name</h2> *@
</div>
<h2>@Model.CurrentCategory</h2>
@{ 
    foreach (var drink in Model.Drinks)
    {
    <div>
        <h4>Drink Name: @drink.Name</h4>
        <h3>Category Name : </h3>
        <p>Drink Price: @drink.Price.ToString("c")</p>
    </div> 
    }
}

